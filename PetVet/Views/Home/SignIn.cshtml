@{
    ViewBag.Title = "About";
}
@model PetVet.Models.Usuario
<style>

    body {
        padding-bottom: 0;
    }

    input {
        max-width: 100%;
    }

    .btn-inicio:hover {
        border-color: rgb(107, 122, 143, .4) !important;
    }

    .input-inicio {
        border-radius: 8px;
        height: 30px;
        border-width: 1px;
    }

    @@media(max-width:600px) {
        #container-imagenes {
            display: none;
        }

        #signup-form-container {
            width: 100% !important;
        }
    }

    form{
        height:100%;
    }
</style>
@using (Html.BeginForm())
{
    <div class="d-flex" style="height:100%;">
        <div id="signup-form-container" class="width-50 center-content" style="background-color: rgb(220, 199, 170, .4); width:50%;">
            <div id="login-form" style="display:flex; justify-content:center; flex-direction:column; text-align:center; width:60%;">
                <form style="">
                    <div class="mb-2 weight-600" style="font-size:2rem;">Bienvenido</div>
                    <div class="text-start">
                        <div class="weight-600">Nombre</div>
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "width-100 input-inicio" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                    <div class="text-start">
                        <div class="weight-600">Cedula</div>
                        @Html.TextBoxFor(model => model.Cedula, new { @class = "width-100 input-inicio" })
                        @Html.ValidationMessageFor(model => model.Cedula)
                    </div>
                    <div class="text-start">
                        <div class="weight-600">Direccion</div>
                        @Html.TextBoxFor(model => model.Direccion, new { @class = "width-100 input-inicio" })
                        @Html.ValidationMessageFor(model => model.Direccion)
                    </div>
                    <div class="text-start">
                        <div class="weight-600">Telefono</div>
                        @Html.TextBoxFor(model => model.Telefono, new { @class = "width-100 input-inicio" })
                        @Html.ValidationMessageFor(model => model.Telefono)
                    </div>
                    <div class="text-start mb-2">
                        <div class="weight-600">Email</div>
                        @Html.TextBoxFor(model => model.Mail, new { @class = "width-100 input-inicio" })
                        @Html.ValidationMessageFor(model => model.Mail)
                    </div>
                    <div class="text-start mb-2">
                        <div class="weight-600">Contraseña</div>
                        @Html.TextBoxFor(model => model.Password, new { @class = "width-100 input-inicio" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    <div class="mb-2">
                        <button onclick="loading()" style="background-color:#D9D9D9; border-color:transparent; position:relative;" type="submit" class="btn-inicio"><span class="btn-text">Registrarme</span></button>
                    </div>
                </form>

            </div>
        </div>
        <div id="container-imagenes" class="width-50 img-container" style="width:50%;">
            <div>
                <img src="~/Content/img/Icono_blanco.png" />
            </div>
            <div>
                <img width="90%" src="~/Content/img/portada.png" />
            </div>
        </div>
    </div>
}
    
<script>
    function loading() {

    }
</script>