
@{
    ViewBag.Title = "DocVets";
}

<div class="container">
    <div class="d-flex">
        <div><h1>Veterinarias</h1></div>
        <div></div>
    </div>

    <div id="vet-list"></div>

    <div style="margin-top:4rem;text-align:center;">
        <button type="button" class="btn btn-new-mas">Nueva Veterinaria</button>
    </div>
</div>

<script type="text/x-kendo-template" id="template">
    <button class="card" style="width:auto; border:1px solid; text-align:center;height:fit-content; margin-bottom:1rem; padding:1rem 0; border-radius:8px; background-color:white;">
        <div class="card-body">
            <h3>#:name#</h3>
        </div>
    </button>
</script>

<script>
var mascotas = [
    { id: 1, name: "Clínica de Mascotas AmigoAnimal" },
    { id: 2, name: "Clínica Veterinaria Animalia" },
    { id: 3, name: "Hospital Veterinario PetCare" },
    { id: 4, name: "Centro Veterinario Paws & Claws" },
    { id: 5, name: "Consultorio Veterinario VetVida" }
    ];

    $("#vet-list").kendoListView({
        dataSource: {
            data: mascotas
        },
        template: kendo.template($("#template").html()),
        pageable: false,
    });</script>

<style>

    body {
        background-color: rgba(220, 199, 170, .25)
    }

    .k-listview-content {
        display:flex;
        flex-direction:column;
    }

    .card-body h3{
        margin:0;
    }

    #vet-list {
        padding: 1rem;
        border: none;
        background-color: transparent;
    }

    .btn-new-mas {
        background-color: #F7C331;
        width: 30%;
        color: white;
        height: 40px;
    }
</style>

